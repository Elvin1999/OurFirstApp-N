                        <GradientStop Color="SpringGreen" Offset="1" ></GradientStop>
                    </LinearGradientBrush>
                </Label.Foreground>

                <Label.BorderBrush>
                    <LinearGradientBrush>
                        <GradientStop Color="Orange" Offset="1" ></GradientStop>
                        <GradientStop Color="Red" Offset="0.5" ></GradientStop>
                        <GradientStop Color="SpringGreen" Offset="0" ></GradientStop>
                    </LinearGradientBrush>
                </Label.BorderBrush>

                <Label.Effect>

                    <DropShadowEffect BlurRadius="30" Direction="20" Color="DeepSkyBlue" ShadowDepth="15" Opacity="1"/>

                </Label.Effect>

            </Label>
            <Button MouseDoubleClick="Label_MouseDoubleClick" BorderThickness="3" Margin="40,40,0,0" HorizontalAlignment="Left" FontFamily="Comic Sans MS" FontSize="100" Content="Click Me" Background="Black">
                <Button.Foreground>
                <LinearGradientBrush>
                    <GradientStop Color="Orange" Offset="0" ></GradientStop>
                    <GradientStop Color="Red" Offset="0.5" ></GradientStop>
                    <GradientStop Color="SpringGreen" Offset="1" ></GradientStop>
                </LinearGradientBrush>
            </Button.Foreground>

                <Button.BorderBrush>
